<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="adsPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>ads.resources.data.RobotList</class>
    <class>ads.resources.data.UserList</class>
    <class>ads.resources.data.Box</class>
    <class>ads.resources.data.ADSUser</class>
    <class>ads.resources.data.DeliveryHistory</class>
    <class>ads.resources.data.DeliveryStep</class>
    <class>ads.resources.data.Delivery</class>
    <class>ads.resources.data.PickedUpDelivery</class>
    <class>ads.resources.data.BoxList</class>
    <class>ads.resources.data.Office</class>
    <class>ads.resources.data.BookedDelivery</class>
    <class>ads.resources.data.DeliveredDelivery</class>
    <class>ads.resources.data.FloorMap</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ads?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="adspassword"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="ads"/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
